.price-wrapper
    padding-bottom:.8rem
    .price-head
        background:url('/static/image/price-bg.png') no-repeat
        height:2.2rem
        padding-left:.4rem
        padding-top:.2rem
        position:relative
        &>h3
            font-size:.3rem
            color:#eaf8fc
        &>p
            font-size:.24rem
            color:#7d99aa
            line-height:.5rem
        &>h1
            font-size:.55rem
            color:#eaf8fc;
            line-height:.8rem
        &>h5
            font-size:.2rem 
            color:#7d99aa 
    .price-search
        background:#fff
        height:.8rem
        border-bottom:.03rem solid #cacaca
        &>input
            flex:1 
            height:.8rem
            color:#cacaca
            line-height:.8rem
            padding-left:.4rem
            font-size:.28rem
        &>a
            flex:0 0 .8rem
            display:block
            width:.8rem
            height:.8rem
            line-height:.8rem
            text-align center
            &>i
                font-size:.3rem
                color:#cacaca
    .partition
        width:100%;
        height:.1rem;
        background:#e8eef1